<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.daohuyen.dell.store_cosmetics.view.fragment.inform.InformationFragment">
    <LinearLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <ImageView
                android:id="@+id/img_cover"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:scaleType="centerCrop"
                android:src="@drawable/background_inform" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_avatar"
                android:layout_width="@dimen/large_avatar_size"
                android:layout_height="@dimen/large_avatar_size"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="21dp"
                android:src="@drawable/avatar_placeholder"
                app:civ_border_color="@color/map_circle_background_color"
                app:civ_border_width="3dp" />

            <ImageButton
                android:id="@+id/img_profile"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_alignEnd="@+id/img_avatar"
                android:layout_below="@+id/img_cover"
                android:background="?selectableItemBackgroundBorderless"
                android:scaleType="centerInside"
                android:src="@drawable/ic_camera" />
        </RelativeLayout>
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_orders"
                android:drawableStart="@drawable/ic_cart_green"
                android:textSize="18dp"
                android:textStyle="bold"
                android:layout_weight="2"
                android:textColor="#000"
                android:text="Đơn mua"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginLeft="40dp"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="3"
                android:text="Thông tin cá nhân"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <ImageButton
                android:background="?selectableItemBackgroundBorderless"
                android:id="@+id/btn_edit_inform"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="@dimen/floating_flat_button_size"
                android:layout_height="@dimen/floating_flat_button_size"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="centerInside"
                android:src="@drawable/ic_edit_gray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/view_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Tên đăng nhập"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_nameRegis"
            android:textSize="15dp"
            android:textColor="@color/md_brown_900"
            android:text="Đào Thị Huyền"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/view_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_email"
            android:textSize="15dp"
            android:textColor="@color/md_brown_900"
            android:text="Daohuyen7794@gmail.com"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/view_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Chứng minh thư"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_identicard"
            android:textSize="15dp"
            android:text="1234567"
            android:textColor="@color/md_brown_900"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/view_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Số điện thoại"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_phone"
            android:textSize="15dp"
            android:textColor="@color/md_brown_900"
            android:text="0869293881"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/view_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Ngày sinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_birthday"
            android:textSize="15dp"
            android:textColor="@color/md_brown_900"
            android:text="Chưa thiết lập"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/view_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        <TextView
            android:textSize="15dp"
            android:textColor="#000"
            android:text="Địa chỉ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txt_address"
            android:textSize="15dp"
            android:textColor="@color/md_brown_900"
            android:text="78 Giải Phóng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"
            android:layout_marginBottom="@dimen/view_margin"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/gray"/>
        </LinearLayout>



    </LinearLayout>
</ScrollView>
