<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.king.managebook.view.fragment.SearchBookFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="18dp">
        <EditText
            android:id="@+id/et_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="tên sách...... "
            android:padding="12dp"
            android:inputType="text"
            android:textSize="18sp"
            android:background="@drawable/round_border_edit_text"/>
        <Spinner
            android:id="@+id/spinner_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"></Spinner>

        <Button
            android:id="@+id/bt_search_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:background="@drawable/custom_buttom"
            android:padding="12dp"
            android:text="Tìm kiếm"
            android:textColor="@color/colorMaterialWhite"
            android:textStyle="bold" />
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rcView_book"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>
