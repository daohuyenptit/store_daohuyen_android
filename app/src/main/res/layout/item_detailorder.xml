<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    app:cardUseCompatPadding="true">
    <LinearLayout
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF">
            <ImageView
                android:id="@+id/img_product_detail"
                android:src="@drawable/logoapp"
                android:layout_width="86dp"
                android:layout_height="110dp"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_name_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textStyle="bold"
                android:text="Mỹ phẩm"
                android:ellipsize="end"
                android:maxLines="2"
                android:layout_marginTop="@dimen/font_size_20sp"
                android:layout_marginBottom="@dimen/fab_margin_8dp"
                android:layout_toRightOf="@+id/img_product_detail"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_cost_product"
                android:text="1.000.000 Đ"
                android:textColor="@color/md_red_500"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_name_product"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/img_product_detail"/>
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/tv_sl"
                android:text="Số lượng :"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cost_product"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/img_product_detail"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/tv_number"
                android:textColor="#000"
                android:textSize="15sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_cost_product"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/tv_sl"/>

        </RelativeLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>