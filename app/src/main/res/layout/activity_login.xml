<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/map_circle_background_color"
    tools:context="com.daohuyen.dell.store_cosmetics.view.user.login.LoginActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="32dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Đăng nhập"
        android:padding="18dp"
        android:textColor="@color/dark_gray"
        android:textStyle="bold"
        android:textSize="48sp"/>
    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:hint="email"
        android:inputType="text"
        android:textSize="25sp"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_email"
        android:background="@drawable/round_border_edit_text"/>
    <EditText
        android:id="@+id/et_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:hint="pass"
        android:padding="10dp"
        android:inputType="textPassword"
        android:textSize="25sp"
        android:drawableLeft="@drawable/ic_pass"
        android:background="@drawable/round_border_edit_text"/>
    <Button
        android:textSize="20dp"
        android:id="@+id/bt_login"
        android:padding="18dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đăng nhập"
        android:textColor="@color/colorMaterialWhite"
        android:textStyle="bold"
        android:background="@drawable/custom_buttom"/>
    <TextView
        android:id="@+id/txt_register"
        android:layout_margin="18dp"
        android:text="Đăng ký"
        android:gravity="right"
        android:textColor="#fd1010"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
</ScrollView>
