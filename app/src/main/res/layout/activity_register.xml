<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/map_circle_background_color"
    tools:context="com.daohuyen.dell.store_cosmetics.view.user.register.RegisterActivity">
    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="32dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Đăng ký"
            android:padding="18dp"
            android:textColor="@color/dark_gray"
            android:textStyle="bold"
            android:textSize="48sp"/>
        <EditText
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Họ và tên"
            android:padding="3dp"
            android:inputType="text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_name"
            android:background="@drawable/round_border_edit_text"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Tên tài khoản"
            android:inputType="text"
            android:textSize="18sp"
            android:padding="3dp"
            android:drawableLeft="@drawable/ic_email"
            android:background="@drawable/round_border_edit_text"/>
        <EditText
            android:id="@+id/et_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Mật khẩu"
            android:padding="3dp"
            android:inputType="textPassword"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_pass"
            android:background="@drawable/round_border_edit_text"/>


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Số điện thoại"
            android:padding="3dp"
            android:inputType="text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_phone"
            android:background="@drawable/round_border_edit_text"/>
        <EditText
            android:id="@+id/et_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="18dp"
            android:hint="Địa chỉ"
            android:padding="3dp"
            android:inputType="text"
            android:textSize="18sp"
            android:drawableLeft="@drawable/ic_add"
            android:background="@drawable/round_border_edit_text"/>
        <Button
            android:id="@+id/bt_register"
            android:padding="18dp"
            android:textColor="@color/colorMaterialWhite"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng ký"
            android:background="@drawable/custom_buttom"/>
    </LinearLayout>
</ScrollView>

