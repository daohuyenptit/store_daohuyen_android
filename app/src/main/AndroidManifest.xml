<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.daohuyen.dell.store_cosmetics">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.location.gps" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logop"
        android:roundIcon="@drawable/logop"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".view.user.login.LoginActivity" />
        <activity android:name=".view.product_detail.ProductDetailActivity" />
        <activity android:name=".view.SplashAcivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.ProfileActivity" />
        <activity android:name=".view.EditProfileActivity" />
        <activity android:name=".view.product_category.Product_CateoryActivity" />
        <activity android:name=".view.one_product_cart.ProductCartActivity" />
        <activity android:name=".view.cart.CartActivity" />
        <activity android:name=".view.bill.BillActivity" />
        <activity android:name=".view.user.register.RegisterActivity" />
        <activity android:name=".view.history.HistoryBillActivity" />
        <activity android:name=".view.detailHistory.DetailOrderActivity" />
        <activity
            android:name=".view.searchproduct.SearchActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity android:name=".view.customer.EditInformationActivity" />
        <activity android:name=".view.confirm_order.ConfirmActivity" />
        <activity android:name=".view.confirm_order.AddressActivity" />
        <activity android:name=".view.confirm_order.TransportActivity" />
        <activity android:name=".view.confirm_order.PayActivity"></activity>
    </application>

</manifest>